{
    "name": "Race Watch (Beta)",
    "description": "A competition timer mainly for Enduro",
    "version": "0.1",
    "author": "Simon Bengtsson",
    "manifest_version": 2,

    "icons": {
        "16": "icon_16.png",
        "128": "icon_128.png"
    },
    "permissions": [
        {
            "fileSystem": ["write", "retainEntries", "directory"]
        },
        "storage"
    ],
    "app": {
        "background": {
            "scripts": ["background.js"]
        }
    },
    "sandbox": {
        "pages": ["sandbox.html"]
    }
}